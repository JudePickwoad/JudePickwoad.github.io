---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-BYKK826LWB"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-BYKK826LWB');
		</script>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Jude Pickwoad</title>
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/uikit/dist/css/uikit.min.css">
		<link rel="stylesheet" type="text/css" href="/css/custom.css">
		<link rel="icon" href="assets/favicon.png">
		<script is:inline src="https://cdn.jsdelivr.net/npm/uikit/dist/js/uikit.min.js"></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/uikit/dist/js/uikit-icons.min.js"></script>
		<title>{title}</title>
	</head>
	<body>
		<!-- NAV + Top Logo -->
		<div class="uk-light uk-background-secondary">
			<!-- NAV + Top Logo -->
			<div class="nav" data-uk-sticky="cls-active: uk-background-secondary uk-box-shadow-medium; top: 100vh; animation: uk-animation-slide-top">
				<div class="uk-container">
					<nav class="uk-navbar uk-navbar-container uk-navbar-transparent" data-uk-navbar>
						<div class="uk-navbar-left">
							<div class="uk-navbar-item uk-padding-remove-horizontal">
								<a class="uk-logo" title="jp-logo" href="/"><img src="/assets/JP-LOGO.png" width="80rem" height="" alt="JP-logo"></a>
							</div>
						</div>
						<div class="uk-navbar-right">
							<ul class="uk-navbar-nav">
								<li><a href="/">Home</a></li>

								<li><a href="/about">About Me</a></li>
								<li><a href="/projects">Projects</a></li>
								<li><a href="/resume">Resumé</a></li>
							</ul>
						</div>
					</nav>
				</div>
			</div>
		</div>
		<slot></slot>
		<!-- FOOTER -->
		<footer class="uk-section uk-section-secondary">
			<div class="uk-container">
				<div class="uk-grid uk-grid-large" data-uk-grid>
					<div class="uk-width-1-2@m">
						<div>
							<a href="https://www.linkedin.com/in/jude-alexander-pickwoad/" class="uk-icon-button" data-uk-icon="linkedin"></a>
							<a href="https://github.com/judepickwoad" class="uk-icon-button" data-uk-icon="github"></a>
						</div>
						
					</div>
					<div class="uk-text-right">
						<p>Or email me at <a href="mailto: japickwoad@mun.ca" title="" class="uk-button uk-button-primary uk-button-small  uk-border-pill" data-uk-scrollspy-class="uk-animation-fade" target="_blank">japickwoad@mun.ca</a> </p>
					</div>
				</div>
				<!-- COPYRIGHT -->		
				<div class="uk-padding uk-text-center uk-padding-remove-horizontal">
					<span class="uk-text-small uk-text-muted">© JP 2025</span>
				</div>
			</div>
		</footer>
	</body>
</html>